FROM alpine:3.20
# Security updates and minimal runtime dependencies
RUN apk update && \
    apk --no-cache add ca-certificates tzdata gettext && \
    apk --no-cache upgrade && \
    rm -rf /var/cache/apk/* && \
    adduser -D -g '' -s /bin/sh appuser

WORKDIR /app

COPY --chown=appuser:appuser orchestratorm8 /usr/local/bin/
# Copy entrypoint script
COPY --chown=appuser:appuser docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Set ownership of the app directory
RUN chown -R appuser:appuser /app

# Security: Switch to non-root user
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD orchestratorm8 --help || exit 1

# Use custom entrypoint for secret loading 
ENTRYPOINT ["docker-entrypoint.sh"]

CMD ["orchestratorm8","launch"]